<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharry.picturepicker">

    <!--相机权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- SD 卡读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name=".picker.impl.PicturePickerActivity"
            android:launchMode="singleTop"
            android:theme="@style/PicturePickerTheme" />
        <activity
            android:name=".watcher.impl.PictureWatcherActivity"
            android:launchMode="singleTop"
            android:theme="@style/PictureWatcherTheme" />

    </application>

</manifest>
